<Project>
  <!-- Forward to Microsoft.NET.Sdk -->
  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.targets" />

  <!--
    FGenerator.dll is not copied to output folder on build.
    It causes error when merge option is enabled.
  -->
  <Target Name="CopyFGeneratorToOutput" AfterTargets="Build">
    <!-- Order is important; first found is priority -->
    <ItemGroup>
      <_FGeneratorDll Include="@(ReferenceCopyLocalPaths)" Condition=" '%(Filename)' == 'FGenerator' " />
      <_FGeneratorDll Include="@(ReferencePath)" Condition=" '%(Filename)' == 'FGenerator' " />
      <_FGeneratorDll Include="$(PkgFGenerator)\lib\netstandard2.0\FGenerator.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(_FGeneratorDll->Take(1))"
          DestinationFolder="$(TargetDir)"
          SkipUnchangedFiles="true"
    />
  </Target>

</Project>
